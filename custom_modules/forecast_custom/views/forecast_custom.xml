<odoo>

    <record id="forecast_ventas_wizard_form_view" model="ir.ui.view">
        <field name="name">forecast.ventas.wizard.form</field>
        <field name="model">x.forecast.ventas.wizard</field>
        <field name="arch" type="xml">
            <form string="Información">
                <group string="Información General">
                    <field name="date" />
                </group>
                <footer>
                    <button name="generate_forecast" string="Generar" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>


    <record id="view_x_forecast_ventas_generado_tree" model="ir.ui.view">
        <field name="name">x.forecast.ventas.generado.tree</field>
        <field name="model">x.forecast.ventas.generado</field>
        <field name="arch" type="xml">
            <tree>
                <field name="x_date" />
                <field name="x_producto" />
                <field name="x_comercial" />
                <field name="x_contacto" />
                <field name="x_cuenta_analitica" />
                <field name="x_studio_tipo" />
            </tree>
        </field>
    </record>

</odoo>

                    <table style="text-align:center">
                        <tr>
                            <th style="text-align:left">Información nutricional</th>
                            <th>Valores medios por 100gr de producto</th>
                            <th>%IR</th>
                        </tr>
                        <tr>
                            <td style="text-align:left">Energía: Kcal (kJ)</td>
                            <td>
                                <p t-field="doc.x_studio_valor_energtico_kcal"/>

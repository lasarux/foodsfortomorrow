<?xml version="1.0"?>
<odoo>
	<template id="report_fichatecnica">
		<t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <div>
                    <span>Nombre producto</span>
                        <p class="m-0" t-field="doc.name"/>
                    </div>
